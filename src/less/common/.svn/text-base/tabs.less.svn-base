@import (reference) '../lib/bracket.less';

tabs {
  display: block;
  height: rem(50);
  font-size: 16px;
  .clearfix();
  background-color: #fff;
  border-top: solid 1px #efefef;
}
tab {
  display: block;
  width: 50%;
  text-align: center;
  float: left;
  line-height: rem(50);
  vertical-align: middle;
  border-bottom: solid 2px #efefef;
  color: #888;
  &.active {
      border-bottom: solid 2px @theme-color;
      color: @cl_44;
  }
}
tabs-container .price {
  font-size: 16px;
  color: #444;
  line-height: rem(22);
  vertical-align: middle;
}
tabs-container .time {
  font-size: 12px;
  color: #888;
}
.left-pannel,.right-pannel {
  display: none;
  &.active {
    display: block; 
  }
}
