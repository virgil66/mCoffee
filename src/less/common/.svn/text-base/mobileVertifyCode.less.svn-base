@import (reference) '../lib/bracket.less';

input.form-control {
  width: 100%;
  line-height: rem(22);
  padding: rem(12);
  font-size: 16px;
}

.default-block {
  font-size: 14px;
  color: @cl_66;
  padding: rem(12);
  vertical-align: middle;
}
.default-hide {
  display: none;
}
.margin-tp {
  margin-top: rem(15);
}

.code-container {
  position: relative;
  input.form-control {
    padding-right: rem(120);
  }
  .get-button {
    position: absolute;
    right: 0;
    top: 0;
    width: rem(140);
    line-height: rem(50);
    vertical-align: middle;
    text-align: center;
    cursor: pointer;
    color: @theme-color;
    font-size: 16px;
    padding-right: rem(12);
  }
}

.hint-bar {
  height: auto;
  line-height: rem(22.5);
  vertical-align: middle;
  width: 100%;
  color: @red;
  padding: rem(12);
  font-size: 12px;
}
// .btn-container {
  // margin-top: rem(32);
// }
.input-field.code,
.input-field.code .item-after {
  position: relative;
}
.input-field.code .get-button {
  display: inline-block;
  width: 100px;
  line-height: rem(16);
  vertical-align: middle;
  text-align: right;
  cursor: pointer;
  color: @theme-color;
  font-size: 16px;
  padding-right: rem(12);
  padding-right: 0;
  height: 100%;
  right: 0;
  top: 0;
  position: absolute;
}
